<div class="">
  <label>Title</label>
  <input type="text" name="title" value="<%= book.title %>" />
</div>
<div class="">
  <label>Author</label>
  <select name="author">
    <% authors.forEach(author => { %>
      <% if (author.id === book.author ) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>"><%= author.name %></option>
      <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>"><%= author.name %></option>
      <% } %>
    <% }) %>
  </select>
</div>
<div class="">
  <label>Publish Date</label>
  <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T') %>" />
</div>
<div class="">
  <label>Page Count</label>
  <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" />
</div>
<div class="">
  <label>Cover Page</label>
  <input type="file" name="cover" />
</div>
<div class="">
  <label>Description</label>
  <textarea name="description" rows="8" cols="80" value="<%= book.description %>"></textarea>
</div>
